@{
  ViewData["Title"] = "Planets";
}
@using ParksExplorer.Models;
@using System.Collections.Generic;
@model List<ParksExplorer.Models.Park>;

<div class="container">
  <h1>All Parks, Monuments, and Forests:</h1>

  <h3>You've Searched:</h3>
  @if (Model.Count == 0)
  {
    <p> No parks match this search </p>
  }
  else
  {
    <ol>
      @foreach (Park park in Model)
      {
        <li><strong>@park.Name</strong>: Classificiation: @park.Classification | <a
            href="/parks/Details/@(park.ParkId)">View Details</a></li>
      }
    </ol>
  }

</div>



